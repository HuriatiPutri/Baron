<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InformasiFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/viewInformasi"
                android:background="@drawable/profil_user_1_card_profil_pengguna"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/textProfile"
                    android:text="Profil pengguna"
                    android:textSize="12dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_below="@+id/textProfile"
                    android:background="@drawable/profil_user_1_boxgantiavatar"
                    android:layout_marginLeft="25dp"
                    android:layout_width="125dp"
                    android:layout_marginBottom="40dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnChange"
                    android:text="Ubah Foto"
                    android:textSize="8dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/ic_btn_blue"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="55dp"
                    android:layout_marginLeft="53dp"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_below="@+id/textProfile"
                    android:layout_toRightOf="@id/imgProfile"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputName"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edtName"
                            android:layout_toRightOf="@id/imgProfile"
                            android:layout_below="@id/edtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama"
                            android:text="Furgetech"
                            android:inputType="text"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputEmail"
                        android:layout_below="@id/inputName"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_toRightOf="@id/imgProfile"
                            android:layout_below="@id/edtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:text="info@furgetech.com"
                            android:layout_marginTop="10dp"
                            android:layout_centerVertical="true"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/colorAccent"
                            android:textSize="12dp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/btnEdit"
                    android:text="Edit Data"
                    android:textSize="8dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/ic_btn_blue"
                    android:layout_toRightOf="@id/imgProfile"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="55dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/viewInformasi"
                    android:background="@drawable/profil_pemilik_card_info"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <Button
                    android:id="@+id/btnUpgrade"
                    android:text="Upgrade"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/ic_btn_blue2"
                    android:layout_width="250dp"
                    android:layout_height="50dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>