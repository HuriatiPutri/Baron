<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/listTrending"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_ecplipse2"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textCategory"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="20dp"
        android:text="Memasak"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/textCategory"
        android:layout_marginLeft="20dp"
        android:text="Cara Membuat Kue Nastar"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/View1"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textCategory"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/textUser"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_below="@+id/View1"
        android:layout_marginLeft="20dp"
        android:text="Frisdiandi Septiatama"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>