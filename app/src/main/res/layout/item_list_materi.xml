<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/listMateri"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_img_people1"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textUser"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="20dp"
        android:text="Dr.Firanda"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_below="@+id/textUser"
        android:layout_marginLeft="20dp"
        android:text="Kesehatan Ibu Hamil"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/imgProfile"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/layoutBody"
            app:cardCornerRadius="15dp"
            android:layout_below="@+id/imgProfile">

            <ImageView
                android:id="@+id/imgContent"
                android:scaleType="centerInside"
                android:padding="20dp"
                android:src="@drawable/ic_img_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_retangle_left"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imgJenis"
                android:layout_toRightOf="@+id/layoutBody"
                android:src="@drawable/ic_jenis"
                android:layout_below="@+id/imgProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>